    li{
        list-style: none;
    }
    #logo{
        display: flex;
        align-items: center;
        position: absolute;
        margin-left: -90vw;
        margin-top: 1vw;
    }
    #logo img{
        width: 5vw;
        height: 8vh;
        transition: all 1ms;
    }
    nav ul li a:hover{
