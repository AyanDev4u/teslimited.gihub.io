        border-radius: 50px;
        font-weight: 100;
        color: #6E07F3;
        font-size: 1.2vw;
        transition: all linear 0.3s;
    }
    nav button:hover{
        background-color: #6E07F3;
        color: #fff;
        transition: all linear 0.3s;
        font-family: 'Heebo', sans-serif;
        font-family: 'Roboto', sans-serif;
    }
    /* Responsive Navbar */
                .menu-icon {
            display: none;
            margin-left: 80%;
            cursor: pointer;
            padding: 15px 20px;
            background-color: transparent;
            color: #6a5acd;
            font-size: 20px;

        }
           .close-button {
            position: absolute;
            top: 15px;
            right: 15px;
            cursor: pointer;
            font-size: 20px;
            color: #fff;
        }
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background-color: #6a5acd;
            color: #fff;
            text-align: center;
            z-index: 1;
            animation: slideIn 0.5s ease-in-out;
        }
        .overlay a{
            color: #fff;
            text-decoration: none;
        }
        #overlay ul{
            margin-top: 75vw;
            font-size: 1.5rem;
            line-height: 12vw;
        }
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-100%);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media only screen and (max-width: 768px) {
            #logo {
                height: 8vh;
                overflow: hidden;
                margin-left: -80vw;
                margin-top: 4vw;
            }
            #logo img{
                width: 20vw;
            }
            nav li {
                float: none;
                display: block;
                text-align: center;
            }

            .menu-icon {
                display: block;
            }

            nav ul {
                display: none;
            }

            nav.responsive ul {
                display: block;
            }
        }
    
        header {
            background-color: #fff;
            color: #141c3a;
            text-align: center;
            padding: 20px;
            font-size: 2em;
        }
        section {
            padding: 40px;
            text-align: center;
        }

        h2 {
            color: #6E07F3;
            font-size: 2em;
            margin-bottom: 20px;
            cursor: pointer;
            transition: color 0.3s;
        }

        h2:hover {
            color: #4B015A;
        }

        h3 {
            color: #6E07F3;
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        p {
            font-size: 1.2em;
            margin-bottom: 20px;
        }

        img {
            width: 100%;
            height: auto;
            max-width: 800px;
            margin-top: 20px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            margin-bottom: 20px; /* Added margin for hover effect */
        }

        img:hover {
            transform: scale(1.05);
        }

        #img_1, #img_2, #img_3, #img_4, #img_5, #img_6 {
            cursor: pointer;
            transition: transform 0.3s;
        }

        #img_1:hover, #img_2:hover, #img_3:hover, #img_4:hover, #img_5:hover, #img_6:hover {
            transform: scale(1.1);
        }

        @media (max-width: 768px) {
            img {
                max-width: 100%;
            }
        }
        #services{
            animation: fadeInUp 1s ease-out;
        }
            @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
         }
        to {
            opacity: 1;
            transform: translateY(0);
        }
        }
    </style>
